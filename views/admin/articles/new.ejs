<%- include ('../../partials/header.ejs') %>  
<%- include ('../../partials/navbar.ejs') %>  

<div class="container">
  <hr>
  <div class="card">
    <div class="card-header">
      <h2>Novo artigo</h2>
    </div>
    <div class="card-body">
      <form method="POST" action="/articles/save">
        <input type="text" class="form-control" name="title" placeholder="Defina o tÃ­tulo do artigo"><br>
        <textarea id="article" class="form-control" placeholder="Escreva o artigo aqui!" name="body" ></textarea><br>
        <label>Categoria </label>
        <select name="category" class="form-control">
          <% categories.forEach(category => { %>
            <option value="<%= category.id %>" ><%= category.title %></option>
          <%})%> 
        </select><br>
        <button class="btn btn-success">Cadastrar</button>
      </form>
    </div>
  </div>
</div>

<%- include ('../../partials/footer.ejs') %> 

<script src="/tinymce/tinymce.min.js"></script>
<script>

  tinymce.init({
    selector: '#article',
    plugins: [
      'advlist autolink lists link image charmap print preview anchor',
      'searchreplace visualblocks code fullscreen',
      'insertdatetime media table paste code help wordcount'
    ]
  });

</script>